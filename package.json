{
  "name": "oauth-2-in-action-code-ts",
  "private": true,
  "workspaces": [
    "exercises/*"
  ],
  "scripts": {
    "lint": "bunx eslint --fix \"**/*.{js,ts,tsx}\"",
    "check": "bunx prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "format": "bunx prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^7.0.0",
    "@hono/vite-build": "^1.6.2",
    "@hono/vite-dev-server": "^0.20.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bun": "latest",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.4"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "bunx eslint --fix",
      "bunx prettier --write"
    ],
    "**/*.{json,md}": [
      "bunx prettier --write"
    ]
  }
